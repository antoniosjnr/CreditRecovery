<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/corFundo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/corTitulo"
        android:text="@string/titulo_menu"
        android:textSize="@dimen/menu_tamanho_fonte"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:background="@color/corFundo">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:id="@+id/img_add"
            android:layout_margin="@dimen/icones_menu_margin"
            android:background="@color/corFundo"
            android:tag="add"
            android:onClick="onClick"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_consulta"
            android:src="@drawable/consulta"
            android:layout_margin="@dimen/icones_menu_margin"
            android:background="@color/corFundo"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_logout"
            android:src="@drawable/log_out"
            android:layout_margin="@dimen/icones_menu_margin"
            android:background="@color/corFundo"
            android:tag="log_out"
            android:onClick="onClick"/>
    </LinearLayout>


</RelativeLayout>